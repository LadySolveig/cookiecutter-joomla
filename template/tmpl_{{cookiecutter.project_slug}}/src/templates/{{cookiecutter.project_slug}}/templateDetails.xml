<?xml version="1.0" encoding="UTF-8"?>
<extension type="template" client="site">
	<name>{{cookiecutter.project_slug}}</name>
	<version>{{cookiecutter.version}}</version>
	<creationDate>{{cookiecutter.creation_date}}</creationDate>
	<author>{{cookiecutter.author}}</author>
	<authorEmail>{{cookiecutter.author_email}}</authorEmail>
	<authorUrl>{{cookiecutter.author_url}}</authorUrl>
	<copyright>(C) {{cookiecutter.copyright_year}}, {{cookiecutter.author_full}}</copyright>
	<description>TPL_{{cookiecutter.project_slug.upper()}}_XML_DESCRIPTION</description>
	<inheritable>1</inheritable>
	<namespace path="src">{{cookiecutter.namespace}}\Template\{{cookiecutter.__project_camelcaps}}</namespace>
	<!-- Scripts to run on installation -->
	<!-- <scriptfile>script.php</scriptfile> -->
	<!-- Template files -->
	<files folder="templates/{{cookiecutter.project_slug}}">
		<filename>component.php</filename>
		<filename>error.php</filename>		
		<filename>index.php</filename>
		<filename>joomla.asset.json</filename>
		<filename>offline.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>html</folder>
		<folder>language</folder>
		<folder>src</folder>
	</files>
	<media destination="templates/site/{{cookiecutter.project_slug}}" folder="media">
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>scss</folder>		
	</media>
	<!-- <languages folder="language"> -->
		<!-- <language tag="en-GB">en-GB/tpl_{{cookiecutter.project_slug}}.ini</language> -->
		<!-- <language tag="en-GB">en-GB/tpl_{{cookiecutter.project_slug}}.sys.ini</language> -->
	<!-- </languages> -->
	<positions>
		<position>topbar</position>
		<position>below-top</position>
		<position>menu</position>
		<position>search</position>
		<position>banner</position>
		<position>top</position>
		<position>main-top</position>
		<position>main-bottom</position>
		<position>breadcrumbs</position>
		<position>bottom</position>
		<position>footer</position>
		<position>debug</position>
		<!-- used directly in the error.php and included here so the position will appear in the list of available positions -->
		<position>error-403</position>
		<position>error-404</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field
					name="brand"
					type="radio"
					label="TPL_{{cookiecutter.project_slug.toupper()}}_BRAND_LABEL"
					default="1"
					layout="joomla.form.field.radio.switcher"
					filter="options"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="logoFile"
					type="media"
					default=""
					label="TPL_{{cookiecutter.project_slug.toupper()}}_LOGO_LABEL"
					showon="brand:1"
				/>

				<field
					name="siteTitle"
					type="text"
					default=""
					label="TPL_{{cookiecutter.project_slug.toupper()}}_TITLE"
					filter="string"
					showon="brand:1"
				/>
				<!-- media example field -->
				<!-- <field
					name="mediaExample"
					type="media"
					default=""
					label="MOD_{{cookiecutter.project_slug.upper()}}_MEDIAEXAMPLE_LABEL"
				/> -->

				<!-- text example field -->
				<!-- <field
					name="textExample"
					type="text"
					default=""
					label="MOD_{{cookiecutter.project_slug.upper()}}_TEXTEXAMPLE_LABEL"
					filter="string"
					showon="brand:1"
				/> -->

				<!-- options example field -->
				<!-- <field
					name="optionsExample"
					type="radio"
					label="MOD_{{cookiecutter.project_slug.upper()}}_OPTIONSEXAMPLE_LABEL"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="options"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field> -->
			</fieldset>
		</fields>
	</config>
	<!-- Changelog -->
	<!-- <changelogurl>https://{{cookiecutter.author_url}}/tmpl_{{cookiecutter.project_slug}}/changelog.xml</changelogurl> -->
	<!-- Update servers -->
	<!-- <updateservers>
		<server type="extension" priority="1" name="Update Site">https://{{cookiecutter.author_url}}/tmpl_{{cookiecutter.project_slug}}/update.xml</server>
	</updateservers> -->
</extension>
